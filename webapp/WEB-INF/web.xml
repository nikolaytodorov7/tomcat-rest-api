<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>servlet.DemoServlet</servlet-name>
        <servlet-class>servlet.DemoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet.DemoServlet</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servlet.DemoServlet</servlet-name>
        <url-pattern>/posts/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servlet.DemoServlet</servlet-name>
        <url-pattern>/posts/*/comments</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servlet.DemoServlet</servlet-name>
        <url-pattern>/comments?postId=1</url-pattern>
    </servlet-mapping>
</web-app>